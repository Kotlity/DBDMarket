<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="appTitleStyle">
        <item name="android:text">@string/appTitleString</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/app_title_font</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="appDescriptionStyle">
        <item name="android:text">@string/appDescriptionString</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/appDescriptionSize</item>
        <item name="fontFamily">@font/app_description_font</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="appLoginTitleStyle">
        <item name="android:text">@string/loginTitleString</item>
        <item name="android:textColor">@color/light_green</item>
        <item name="android:textSize">@dimen/appDescriptionSize</item>
        <item name="fontFamily">@font/login_register_title_font</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="appForgotPasswordStyle">
        <item name="android:text">@string/forgotPasswordString</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/appForgotPasswordSize</item>
        <item name="fontFamily">@font/login_register_title_font</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="appHelperRegisterStyle">
        <item name="android:text">@string/helperRegisterString</item>
        <item name="android:textColor">@color/light_white</item>
        <item name="android:textSize">@dimen/helperLoginRegisterSize</item>
        <item name="fontFamily">@font/app_buttons_font</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_marginStart">@dimen/linksAndHelpersMarginStart</item>
    </style>

    <style name="appRegisterLinkStyle">
        <item name="android:text">@string/registerLinkString</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/loginRegisterLinkSize</item>
        <item name="fontFamily">@font/login_register_title_font</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_marginStart">@dimen/linksAndHelpersMarginStart</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="appRegisterTitleStyle">
        <item name="android:text">@string/registerTitleString</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/appDescriptionSize</item>
        <item name="fontFamily">@font/login_register_title_font</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="appHelperLoginStyle">
        <item name="android:text">@string/helperLoginString</item>
        <item name="android:textColor">@color/light_white</item>
        <item name="android:textSize">@dimen/helperLoginRegisterSize</item>
        <item name="fontFamily">@font/app_buttons_font</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_marginStart">@dimen/linksAndHelpersMarginStart</item>
    </style>

    <style name="appLoginLinkStyle">
        <item name="android:text">@string/loginLinkString</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/loginRegisterLinkSize</item>
        <item name="fontFamily">@font/login_register_title_font</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_marginStart">@dimen/linksAndHelpersMarginStart</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="tabLayout_text_style" parent="TextAppearance.AppCompat">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="recycler_views_item_name_textview_style" parent="TextAppearance.AppCompat">
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="special_item_price_textview_style" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">italic</item>
        <item name="textAllCaps">false</item>
        <item name="android:gravity">center</item>
    </style>

</resources>